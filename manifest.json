{
  "manifest_version": 3,
  "name": "Manga Chapter Downloader",
  "version": "1.2.1",
  "description": "Download manga chapters from manga.detectiveconanar.com",
  "permissions": ["activeTab", "downloads", "storage"],
  "host_permissions": ["https://manga.detectiveconanar.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://manga.detectiveconanar.com/manga/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["lib/jszip.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
